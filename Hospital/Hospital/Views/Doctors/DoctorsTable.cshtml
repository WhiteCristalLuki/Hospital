@model IEnumerable<Doctor>
<div>
    <a asp-action="AddDoctor" asp-controller="Doctors" class="btn btn-outline-dark mb-4" style="width: 100%;">Добавить врача в базу данных</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Имя</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Отчество</th>
            <th scope="col">Должность</th>
            <th scope="col">Отдел</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var doctor in Model)
        {
            <tr>
                <th scope="row">@doctor.Id</th>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.MiddleName</td>
                <td>
                    @foreach (var pos in doctor.Positions)
                    {
                        <p>@pos?.Title</p>
                    }
                </td>
                <td>
                    @foreach (var dep in doctor.Departments)
                    {
                        <p>@dep?.Title</p>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="UpdateDoctor" asp-route-id="@doctor.Id">Изменить</a>
                    <a class="btn btn-danger" asp-action="DeleteDoctor" asp-route-id="@doctor.Id">Удалить</a>
                </td>
            </tr>
        }    
    </tbody>
</table>